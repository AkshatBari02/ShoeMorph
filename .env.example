# ===========================================
# ShoeMorph Server Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/shoemporph
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/shoemorph?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Client URL (for CORS in production)
CLIENT_URL=http://localhost:3000
